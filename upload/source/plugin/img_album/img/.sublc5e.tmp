.b1r #img_album_btn{background: url("tu24.gif") no-repeat scroll center 1px transparent;}
.b2r #img_album_btn{background: url("tu16.gif") no-repeat scroll center 1px transparent;}
#img_album *{margin:0;padding:0;list-style-type:none;}
#img_album{border:1px solid transparent; margin:10px auto; position:relative;overflow:hidden;}
#img_album #img_album_tool{position: absolute;z-index: 100; top:5px; right:5px;/*left:50%; margin-left:-35px;*/padding:5px 10px; border:1px solid #FFF; border-radius:2px;color:#FFF;font-family:simsun; font-size:12px;background: url(font_bg.png);cursor: pointer; opacity:0.7;filter:alpha(opacity=70);transition: opacity 0.5s;}
#img_album #img_album_tool:hover{opacity:1;filter:alpha(opacity=100);}
#img_album #miku_prev_block{display:block;width:50%; height:100%; position:absolute;left:0;z-index:99;overflow:hidden;opacity: 0.1; filter:alpha(opacity=10);transition: opacity 1s; cursor:pointer;/*cursor:url("../../../../source/plugin/img_album/img/arr_left.cur"),pointer;*/}
#img_album #miku_prev_block:hover{background:url("prevBtnTop.png") no-repeat 0 50%; opacity:1; filter:alpha(opacity=100);}
#miku_prev_block img{width:100%;height:100%;}
#img_album #miku_next_block{display:block;width:50%; height:100%; position:absolute;right:0;z-index:99;overflow:hidden;opacity: 0.1; filter:alpha(opacity=10);transition: opacity 1s; cursor:pointer;/*cursor:url("../../../../source/plugin/img_album/img/arr_right.cur"),pointer;*/}
#img_album #miku_next_block:hover{background:url("nextBtnTop.png") no-repeat 100% 50%; opacity:1; filter:alpha(opacity=100);}
#miku_next_block img{width:100%;height:100%;}
#img_album #miku_bottom_prev_btn{width:15px;height:70px;position:absolute;left:0;bottom:0px;z-index:99;background:url("prevBtn.png");cursor:pointer;border:1px solid #333; border-width: 1px 0;opacity: 0.6; filter:alpha(opacity=60);transition: opacity 1s;}
#img_album #miku_bottom_next_btn{width:15px;height:70px;position:absolute;right:0;bottom:0px;z-index:99;background:url("nextBtn.png");cursor:pointer;border:1px solid #333;border-width: 1px 0;opacity: 0.6; filter:alpha(opacity=60);transition: opacity 1s;}
#img_album #miku_bottom_prev_btn:hover{opacity: 80; filter:alpha(opacity=80);}
#img_album #miku_bottom_next_btn:hover{opacity: 80; filter:alpha(opacity=80);}
#img_album #img_album_pic{overflow-y:hidden;padding-bottom:0px; position: relative;}
#img_album #img_album_tip{padding:5px 0px 4px 0;width: 100%; height: 20px; position: absolute;left: 0;bottom: 0px; z-index:100;background: url(font_bg.png);transition: all 0.5s;}
/*#img_album #img_album_pic img{display: block;}*/
#img_album #img_album_tip:hover{height:auto;}
#img_album #img_album_tip:hover #img_album_close_tip{display:block;}
/*#img_album #img_album_tip #img_album_close_tip{font-size:12px;color:#ccc;background-color: #fff;width: 50px;position:absolute; bottom:0; right:-50px; overflow: hidden;}*/
#img_album #img_album_tip #img_album_close_tip{display:none; text-indent:20px; height: 11px; width: 11px;position: absolute;right: 1px; bottom:1px; background: url(close.png) center center no-repeat; overflow: hidden; opacity: 0.7; filter:alpha(opacity=70);}
#img_album #img_album_tip #img_album_close_tip:hover{width:50px; background-position: 0 0; font-size:12px;opacity: 1; filter: alpha(opacity=100);}
#img_album #img_album_tip #img_album_tip_content{ font-size:14px; text-indent:14px; padding:0 5px;text-align:left; line-height:21px; color:#fff; cursor: pointer;}
#img_album #img_album_list{overflow:hidden; position:absolute;left:0;bottom:0;}
#img_album #img_album_list li{overflow:hidden;float:left;text-align:center;position:relative;cursor:pointer;background:#ccc;}
#img_album .miku_img_number{background:#000;position:absolute;right:0;bottom:0;color:#FFF;font:12px/1.5 Tahoma,Helvetica,'SimSun',sans-serif;}
.miku_z_index{z-index:100;}
